<template id="opt_blog_post_tags_display_extend" name="Tags" inherit_id="website_blog.opt_blog_post_tags_display">
    <xpath expr="//t[@t-if='blog_post.tag_ids']" position="replace">
        <t t-if="blog_tags">
            <div class="h5">
                <t t-foreach="blog_tags" t-as="one_tag">
                    <a class="badge border post_link text-decoration-none text-primary" t-attf-href="#{blog_url(tag=one_tag.id)}" t-esc="one_tag.name"/>
                </t>
            </div>
        </t>
    </xpath>
</template>


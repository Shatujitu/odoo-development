<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- ====== List View ================================================ -->
        <record id="view_work_package_list" model="ir.ui.view">
            <field name="name">Work Package Page Tree</field>
            <field name="model">work.package</field>
            <field name="priority">99</field>
            <field name="arch" type="xml">
                <tree string="Work Packages">
                    <field name="id" optional="hide"/>
                    <field name="name" optional="show"/>
                    <field name="title" optional="show"/>
                    <field name="content" optional="hide"/>
                    <field name="icon" optional="show"/>
                </tree>
            </field>
        </record>
        <!-- ====== Form View ================================================ -->
        <record id="view_work_package_form" model="ir.ui.view">
            <field name="name">work.package.form</field>
            <field name="model">work.package</field>
            <field name="arch" type="xml">
                <form string="Work Packages">
                    <sheet>
                        <field name="icon" widget="image" class="oe_avatar"/>
                        <group name="work_package_details">
                            <field name="name" placeholder="Work Package Name"/>
                            <field name="title" placeholder="Work Package Title"/>
                            <field name="content" placeholder="Work Package Content"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ====== Actions ================================================ -->
        <record id="action_work_package" model="ir.actions.act_window">
            <field name="name">Work Packages</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">work.package</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_work_package_list')}),
            ]"/>
            <field name="help" type="html">
              <p class="o_view_nocontent_smiling_face">
                No Work Package yet!
              </p><p>
                Please add a new work package!
              </p>
            </field>
        </record>
        <!-- ====== Menu Items ============================================== -->
        <menuitem id="menu_work_package"
            parent="website.menu_content"
            sequence="20"
            name="Work Packages"
            action="website_work_package.action_work_package"/>
    </data>
</odoo>


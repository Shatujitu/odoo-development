<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <!-- ====== Tree View ================================================ -->
        <record id="view_student_profile_tree" model="ir.ui.view">
            <field name="name">student.profile.tree</field>
            <field name="model">student.profile</field>
            <field name="arch" type="xml">
                <tree string="Student Profile">
                    <field name="id" optional="hide"/>
                    <field name="name" optional="show"/>
                    <field name="age" optional="show"/>
                    <field name="group" optional="show"/>
                </tree>
            </field>
        </record>
        <!-- ====== Form View ================================================ -->
        <record id="view_student_profile_form" model="ir.ui.view">
            <field name="name">student.profile.form</field>
            <field name="model">student.profile</field>
            <field name="arch" type="xml">
                <form string="Student Profile">
                    <sheet>
                        <group name="student_details">
                            <field name="name" placeholder="Student Name"/>
                            <field name="age" placeholder="Student Age"/>
                            <field name="group" placeholder="Student Group"/>
                        </group>
                        <notebook>
                            <page name="college_page" string="Colleges">
                                <field name="college_id"
                                       widget="many2one"
                                       options="{'resizable': false}">
                                    <tree editable="bottom">
                                        <field name="name" string="Name" optional="show"/>
                                        <field name="address" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- ====== Actions ================================================ -->
        <record id="action_student_profile" model="ir.actions.act_window">
            <field name="name">Student Profile</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">student.profile</field>
            <field name="view_mode">tree,form</field>
            <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'tree', 'view_id': ref('view_student_profile_tree')}),
            ]"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No student yet!
                </p>
                <p>
                    Please add a new student!
                </p>
            </field>
        </record>
        <!-- ====== Menu Items ============================================== -->
        <menuitem id="menu_student_profile"
                  parent="website.menu_content"
                  sequence="30"
                  name="Students"
                  action="website_student.action_student_profile"/>
    </data>
</odoo>


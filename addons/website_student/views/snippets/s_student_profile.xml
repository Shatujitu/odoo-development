<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Snippet -->
    <template id="s_student_profile" name="Student Profile">
        <t t-call="website.s_dynamic_snippet_template">
            <t t-set="snippet_name" t-value="'s_student_profile'"/>
            <t t-set="snippet_classes" t-value="'s_dynamic_snippet_student_profile'"/>
        </t>
    </template>

    <!-- Test layout -->
    <template id="dynamic_filter_template_student_profile_list" name="Student layout">
        <div t-foreach="records" t-as="data" class="d-flex mt-3" data-number-of-elements="3">
            <t t-set="record" t-value="data['_record']"/>
            <div class="card">
                <!--<a class="s_blog_posts_post_cover" t-att-href="data['call_to_action_url']">
                    <t t-call="website.record_cover">
                        <t t-set="_record" t-value="record"/>
                        <t t-set="_resize_height" t-value="256"/>
                        <t t-set="_resize_width" t-value="256"/>
                        <t t-set="additionnal_classes" t-value="'thumb'"/>
                    </t>
                </a>-->
                <div class="card-body">
                    <div t-if="is_sample" class="h5 o_ribbon_right bg-primary text-uppercase">Sample</div>
                    <a t-att-href="data['call_to_action_url']">
                        <h4 class="mb-0" t-field="record.name"/>
                    </a>
                </div>
            </div>
        </div>
    </template>

    <!-- Options -->
    <template id="s_student_profile_options" inherit_id="website.snippet_options">
        <xpath expr="." position="inside">
            <t t-call="website_student.s_student_profile_options_template">
                <t t-set="snippet_name" t-value="'dynamic_snippet_student_profile'"/>
                <t t-set="snippet_selector" t-value="'.s_dynamic_snippet_student_profile'"/>
            </t>
        </xpath>
    </template>

    <template id="s_student_profile_options_template" inherit_id="website.s_dynamic_snippet_options_template">
        <xpath expr="//we-select[@data-name='filter_opt']" position="after">
            <we-select t-if="snippet_name == 'dynamic_snippet_student_profile'" string="Students" data-no-preview="true"
                       data-name="student_opt" data-attribute-name="filterByBlogId">
                <we-button data-select-data-attribute="-1">All students</we-button>
                <!-- the blog list will be generated in js -->
            </we-select>
        </xpath>
    </template>

    <!-- Assets -->
    <record id="website_student.s_student_profile_000_js" model="ir.asset">
        <field name="name">Student Profile 000 JS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">website_student/static/src/snippets/s_student_profile/000.js</field>
    </record>
</odoo>

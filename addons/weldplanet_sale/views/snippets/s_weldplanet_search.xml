<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="s_weldplanet_search" name="Weldplanet Search">
        <section class="s_weldplanet_search py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3"></div>
                    <div class="col-lg-6 text-center d-flex flex-column align-items-center">
                        <h2 class="search-header">Find your welding products</h2>
                        <t t-snippet-call="website.s_searchbar_input" class="w-100"/>
                        <div class="search-recommendation d-flex align-items-center mt-4 py-2 ps-2 pe-5">
                            <img src="/weldplanet_sale/static/src/img/snippets_demo/s_weldplanet_search_magnify.svg"
                                 class="img-fluid" aria-label="Weldplanet Logo"
                                 title="Weldplanet" role="img"/>
                            <div class="text-start">
                                <h5 class="search-text">Not sure what you are looking for?</h5>
                                <a class="search-a" href="/">Try our welding recommendation</a>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3"></div>
                </div>
            </div>
        </section>
    </template>

    <!-- Assets -->
    <record id="weldplanet_sale.s_weldplanet_search_000_scss" model="ir.asset">
        <field name="name">Weldplanet Searchbar 000 SCSS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">weldplanet_sale/static/src/snippets/s_weldplanet_search/000.scss</field>
    </record>
</odoo>

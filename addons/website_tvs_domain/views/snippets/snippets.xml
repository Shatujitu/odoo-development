<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="snippets" inherit_id="website.snippets" name="Domain Snippets">
        <xpath expr="//div[@id='snippet_structure']" position="before">
            <div id="snippet_structure" class="o_panel">
                <div class="o_panel_header">TVS Domains</div>
                <div class="o_panel_body">
                    <t t-snippet="website_tvs_domain.s_domains" string="Domains"
                       t-thumbnail="/website_tvs_domain/static/src/img/s_tvs_domain.svg">
                        <keywords>domain</keywords>
                    </t>
                    <t t-snippet="website_tvs_domain.s_sub_domains" string="Sub Domains"
                       t-thumbnail="/website_tvs_domain/static/src/img/s_tvs_domain.svg">
                        <keywords>sub, domain</keywords>
                    </t>
                    <t t-snippet="website_tvs_domain.s_projects" string="Projects"
                       t-thumbnail="/website_tvs_domain/static/src/img/s_tvs_domain.svg">
                        <keywords>domain, project</keywords>
                    </t>
                    <t t-snippet="website_tvs_domain.s_topics" string="Topics"
                       t-thumbnail="/website_tvs_domain/static/src/img/s_tvs_domain.svg">
                        <keywords>domain, topic</keywords>
                    </t>
                    <t t-snippet="website_tvs_domain.s_back_button" string="Back Button"
                       t-thumbnail="/website_tvs_domain/static/src/img/s_tvs_domain.svg">
                        <keywords>back, button</keywords>
                    </t>
                </div>
            </div>
        </xpath>
    </template>

</odoo>

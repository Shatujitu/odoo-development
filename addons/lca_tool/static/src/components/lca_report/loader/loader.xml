<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">
    <t t-name="lca_tool.loader" owl="1">
        <div class="loading-page d-flex justify-content-center align-items-center position-fixed w-100 h-100" style="background: rgba(255, 255, 255, 1); z-index: 1000" t-if="props.loading">
            <div class="d-flex flex-column justify-content-center align-items-center mb-5 pb-5">
                <div>
                    <svg viewBox="0 0 38 38" xmlns="http://www.w3.org/2000/svg" width="90" height="90" stroke="#448C5C">
                        <g fill="none" fill-rule="evenodd">
                            <g transform="translate(1 1)" stroke-width="2">
                                <circle stroke-opacity=".25" cx="18" cy="18" r="18"/>
                                <path d="M36 18c0-9.94-8.06-18-18-18">
                                    <animateTransform attributeName="transform" type="rotate" from="0 18 18" to="360 18 18" dur="0.8s" repeatCount="indefinite"/>
                                </path>
                            </g>
                        </g>
                    </svg>
                </div>
                <div class="p-3">
                    <h5 class="wave-text">Please wait this might take a while</h5>
                </div>
            </div>
        </div>
    </t>
</templates>

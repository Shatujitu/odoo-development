<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.web.lca_api</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='recaptcha']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="lca_api">
                    <div class="o_setting_left_pane"></div>
                    <div class="o_setting_right_pane" id="lca_api_settings">
                        <div class="o_form_label"> LCA API Integration </div>
                        <div class="content-group mt16">
                            <label for="lca_api_base_url" class="o_light_label"/>
                            <field name="lca_api_base_url"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
